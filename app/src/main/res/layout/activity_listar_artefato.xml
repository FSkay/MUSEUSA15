<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListarArtefatoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Listar Artefatos cadastrados"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/etNMom"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="Nº MOM -"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/black"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="74dp" />

        <EditText
            android:id="@+id/etNomeObjeto"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="Nome objeto:"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/black"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="121dp" />

        <EditText
            android:id="@+id/etAno"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="Época"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/black"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="167dp" />

        <EditText
            android:id="@+id/etDoador"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Doador"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/black"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="214dp" />

        <ImageView
            android:id="@+id/imArt"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            app:srcCompat="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="261dp" />

        <Button
            android:id="@+id/btListar"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:onClick="editarArtefato"
            android:text="Listar"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="473dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>